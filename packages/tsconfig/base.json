{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/base",
  "display": "Default",
  "compilerOptions": {
    "types": ["astro/client"],
    "baseUrl": "../../",
    "paths": {
      "@client-components/*": ["apps/client-components/*"],
      "@components/*": ["apps/components/*"],
      "@layouts/*": ["apps/layouts/*"],
      "@packages/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules"]
}
